<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vui.bluelight"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vui.bluelight.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vui.bluelight.main.SelectPhotoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/DialogStyleBottom" >
        </activity>
        <activity android:name="com.vui.bluelight.SettingActivity" >
        </activity>
        <activity android:name="com.vui.bluelight.UserActivity" >
        </activity>
        <activity android:name="com.vui.bluelight.group.GroupActivity" >
        </activity>
        <activity android:name="com.vui.bluelight.group.GroupDetialActivity" >
        </activity>
        <activity android:name="com.vui.bluelight.music.MusicPlayActivity" >
        </activity>

        <service android:name="com.vui.bluelight.music.MusicPlayerService2" >
        </service>

        <activity android:name="com.vui.bluelight.music.MusicListActivity" >
        </activity>

        <!-- test -->
        <activity android:name="com.vui.bluelight.music.ServiceTestActivity" >
        </activity>
        <activity android:name="com.vui.bluelight.music.ServiceTestActivity2" >
        </activity>

        <service android:name="com.vui.bluelight.music.MusicService" >
        </service>
        <!-- test -->
        <activity
            android:name="com.vui.bluelight.mod.ModeShakingActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.vui.bluelight.timer.TimerActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="com.vui.bluelight.rgb.RGBMainActivity"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
    </application>

</manifest>