<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1BA4CB"
    android:orientation="vertical" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
     android:id="@+id/in_head_bar"
    android:padding="10dp"
     >
     <ImageView 
         android:id="@+id/back"
         android:layout_width="55dp"
         android:layout_height="35dp"
         android:padding="11dp"
         android:layout_marginLeft="-17dp"
         android:src="@drawable/back_arr"
         android:layout_centerVertical="true"
         />
     
     <TextView 
         android:id="@+id/title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="mode"
          android:textColor="#000000"
         android:layout_centerInParent="true"
         android:textSize="20sp"
         />
     
     <TextView 
         android:id="@+id/right_btn"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="OK"
         android:textColor="#000000"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:textSize="20sp"
         />
</RelativeLayout>

           <include
            android:id="@+id/inc_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/bottom_switcher_bar" />
    <RelativeLayout
         android:id="@+id/rlt_shake_onff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/in_head_bar"
        android:paddingTop="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shaking"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_onoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="ON"
            android:button="@null"
            android:padding="8dp"
            android:checked="true"
            android:background="@drawable/bg_mode_selector"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/cb_onoff"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_type_select_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_above="@id/inc_foot"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_rgb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/timer_type_left"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="RGB"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_scene"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/timer_type_center"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Scene"
            android:textColor="#000000"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_flicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/timer_type_right"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Flicker"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RadioGroup>

       <GridView
        android:id="@+id/grirv_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlt_shake_onff"
        android:layout_above="@id/rg_type_select_content"
        android:listSelector="@drawable/bg_mode_selector"
        android:numColumns="3" />
       
 

</RelativeLayout>