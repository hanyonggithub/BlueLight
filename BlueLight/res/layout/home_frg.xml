<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="livingroom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="bedroom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="kitchen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="livingroom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="bedroom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="kitchen" />
            </LinearLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/setting" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/theme_blue" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                 >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/blue_circle" >

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="@color/theme_blue" />

                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="10dp"
                        android:layout_centerInParent="true"
                        android:background="@color/theme_blue" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  
                     >
                    <TextView 
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nina"
                        android:textSize="20sp"
                        android:textStyle="bold"
                      
                        />
                    <ImageView 
                        android:id="@+id/light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/light_on"
                        android:layout_toRightOf="@id/user_name"
                        android:layout_marginLeft="25dp"
                        />
                    <TextView 
                        android:id="@+id/lefttime_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 hrs 55 munites" 
                        android:layout_toRightOf="@id/light"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView 
                        android:id="@+id/user_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Designer"
                        android:textSize="15sp"
                        android:layout_below="@id/user_name"
                        />
                    <ImageView 
                        android:id="@+id/music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/music_on"
                        android:layout_toRightOf="@id/user_job"
                        android:layout_below="@id/user_name"
                        android:layout_alignLeft="@id/light"
                        />
                    <TextView 
                        android:id="@+id/lefttime_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 hrs 55 munites" 
                        android:layout_toRightOf="@id/music"
                        android:layout_below="@id/user_name"
                        android:layout_alignLeft="@id/lefttime_light"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@android:color/white"
                android:layout_marginTop="5dp"
                />
         
                
                
            
           
        </LinearLayout>
    </ScrollView>

</LinearLayout>