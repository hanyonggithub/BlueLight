<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1BA4CB"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/v_topbar" />

    <!-- 中间的彩盘 -->

    <RelativeLayout
        android:id="@+id/rlt_color_selector"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/iv_roll_cir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/timer_rgb_bigcir" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:src="@drawable/timer_rgb_multicolor_white" />

         <com.vui.bluelight.customview.TimerHalfRingView
             android:id="@+id/cus_view_halring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />
         
        <LinearLayout
            android:id="@+id/llt_wheel_content2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <com.vui.bluelight.customview.WheelView
                android:id="@+id/main_wv2"
                android:layout_width="40dp"
                android:layout_height="80dp" />
        </LinearLayout>
    </RelativeLayout>
<!-- 底部的滚轮的容器 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 底部的滚轮 -->

        <LinearLayout
            android:id="@+id/llt_wheel_content"
            android:layout_width="40dp"
            android:layout_height="92dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_wheel_rec_cir"
            android:orientation="horizontal" >

            <com.vui.bluelight.customview.WheelView
                android:id="@+id/main_wv"
                android:layout_width="40dp"
                android:layout_height="80dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>